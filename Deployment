---
apiVersion: "apps/v1"
kind: "Deployment"
metadata:
  name: "nginx-2"
  namespace: "default"
  labels:
    app: "nginx-2"
spec:
  replicas: 3
  selector:
    matchLabels:
      app: "nginx-2"
  template:
    metadata:
      labels:
        app: "nginx-2"
    spec:
      containers:
      - name: "nginx-2"
        image: "nginx:latest"
        volumeMounts:
          - mountPath: /var/log/nginx/
            name: log-volume
      volumes:
      - name: log-volumes
        persistentVolumeClaim:
          claimName: pvc-disposable
